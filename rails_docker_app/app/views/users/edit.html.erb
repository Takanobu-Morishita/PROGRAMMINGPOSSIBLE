<h1>編集画面</h1>
<%= form_for(@user, url: user_path(@user)) do |f| %>
<div class="field">
  <%= f.label :email, "メールアドレス" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>
<div>
  <%= f.label :ユーザ名 %><br>
  <%= f.text_field :username, autofocus: true, :placeholder =>"#{@user.username}" %>
</div>
<div>
  <%= f.label :プロフィール %><br>
  <%= f.text_area :profile, :placeholder =>"#{@user.profile}" %>
</div>
<div>
  <%= f.submit "更新する" %>
  <%= button_to "削除", user_path(@user), method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"} %>
</div>
<% end %>