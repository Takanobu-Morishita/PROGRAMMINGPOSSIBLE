<h1>編集画面</h1>
<%= form_for(@post, url: post_path(@post)) do |f| %>
<div>
  <%= f.label :タイトル %><br>
  <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post.title}" %>
</div>
<div>
  <%= f.label :本文 %><br>
  <%= f.text_area :body, :placeholder =>"#{@post.body}" %>
</div>
<div>
<%= f.submit "更新" %>
<%= button_to "削除", post_path(@post), method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"} %>
</div>
<% end %>